    <!-- IF S_DISPLAY_SEARCH -->
    <div id="more-dropdown" class="mui-dropdown">
      <button class="more-btn" data-mui-toggle="dropdown">
        <i class="material-icons">more_vert</i>
      </button>
      <ul class="mui-dropdown__menu mui-dropdown__menu--right">
        <!-- EVENT overall_header_searchbox_before -->
        <!-- IF S_DISPLAY_SEARCH and not S_IN_SEARCH -->
        <li id="search-box" class="search-box search-header" role="search">
          <form action="{U_SEARCH}" method="get" id="search" class="mui-form--inline">
            <div class="mui-textfield">
              <input name="keywords" id="keywords" type="search" maxlength="128" title="{L_SEARCH_KEYWORDS}"
              class="inputbox search tiny" size="20" value="{SEARCH_WORDS}" placeholder="{L_SEARCH_MINI}" />
              <a href="{U_SEARCH}" title="{L_SEARCH_ADV}">
                {L_SEARCH_ADV}
              </a>
            </div>
            <button class="search-btn" type="submit" title="{L_SEARCH}">
              <i class="material-icons">search</i>
            </button>
            {S_SEARCH_HIDDEN_FIELDS}
          </form>
        </li>
        <!-- ENDIF -->
        <!-- EVENT overall_header_searchbox_after -->
        <li><strong>{L_QUICK_LINKS}</strong></li>
        <!-- IF S_REGISTERED_USER -->
        <li>
          <a href="{U_SEARCH_SELF}" role="menuitem">
            {L_SEARCH_SELF}
          </a>
        </li>
        <!-- ENDIF -->
        <!-- IF S_USER_LOGGED_IN -->
        <li>
          <a href="{U_SEARCH_NEW}" role="menuitem">
            {L_SEARCH_NEW}
          </a>
        </li>
        <!-- ENDIF -->
        <!-- IF S_LOAD_UNREADS -->
        <li>
          <a href="{U_SEARCH_UNREAD}" role="menuitem">
            {L_SEARCH_UNREAD}
          </a>
        </li>
        <!-- ENDIF -->
        <li>
          <a href="{U_SEARCH_UNANSWERED}" role="menuitem">
            {L_SEARCH_UNANSWERED}
          </a>
        </li>
        <li>
          <a href="{U_SEARCH_ACTIVE_TOPICS}" role="menuitem">
            {L_SEARCH_ACTIVE_TOPICS}
          </a>
        </li>
      </ul>
    </div>
    <!-- ENDIF -->