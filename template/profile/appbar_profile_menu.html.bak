<div id="profile-dropdown" class="profile-dropdown mui-dropdown">
  <!-- IF S_USER_LOGGED_IN and S_REGISTERED_USER -->
  <!-- EVENT navbar_header_username_prepend -->
  <!-- IF CURRENT_USER_AVATAR -->
  <a href="{U_PROFILE}" title="{S_USERNAME}" class="more-btn" data-mui-toggle="dropdown">
    {CURRENT_USER_AVATAR}
  </a>
  <!-- ELSE -->
  <a href="{U_PROFILE}" title="{S_USERNAME}" class="more-btn no-avatar" data-mui-toggle="dropdown">
    <i class="material-icons">account_circle</i>
  </a>
  <!-- ENDIF -->
  <ul class="mui-dropdown__menu mui-dropdown__menu--right">
    <li><strong>{S_USERNAME}</strong></li>
    <!-- IF U_RESTORE_PERMISSIONS -->
    <li>
      <a href="{U_RESTORE_PERMISSIONS}">
        <i class="icon fa-refresh fa-fw" aria-hidden="true"></i><span>{L_RESTORE_PERMISSIONS}</span>
      </a>
    </li>
    <!-- ENDIF -->
    <!-- EVENT navbar_header_profile_list_before -->
    <li>
      <a href="{U_PROFILE}" title="{L_PROFILE}" role="menuitem">
        <i class="material-icons">miscellaneous_services</i>
        {L_PROFILE}
      </a>
    </li>
    <!-- IF U_USER_PROFILE -->
    <li>
      <a href="{U_USER_PROFILE}" title="{L_READ_PROFILE}" role="menuitem">
        <i class="material-icons">person</i>
        {L_READ_PROFILE}
      </a>
    </li>
    <!-- ENDIF -->
    <!-- EVENT navbar_header_profile_list_after -->
    <!-- IF U_ACP -->
    <li class="mui--divider-top">
      <a href="{U_ACP}" title="{L_ACP}" role="menuitem">
        <i class="material-icons">admin_panel_settings</i>
        {L_ACP}
      </a>
    </li>
    <!-- ENDIF -->
    <!-- IF U_MCP -->
    <li class="mui--divider-top">
      <a href="{U_MCP}" title="{L_MCP}" role="menuitem">
        <i class="material-icons">local_police</i>
        {L_MCP}
      </a>
    </li>
    <!-- ENDIF -->
    <!-- IF S_USER_LOGGED_IN -->
    <li class="mui--divider-top">
      <a href="{U_LOGIN_LOGOUT}" class="logout-item" accesskey="x" role="menuitem">
        <i class="material-icons">logout</i>
        {L_LOGIN_LOGOUT}
      </a>
    </li>
    <!-- ENDIF -->
  </ul>
  <!-- EVENT navbar_header_username_append -->
  <!-- ELSE IF not S_USER_LOGGED_IN and not S_IS_BOT -->
  <a href="{U_LOGIN_LOGOUT}" title="{L_LOGIN_LOGOUT}" class="more-btn" data-mui-toggle="dropdown" accesskey="x" role="menuitem">
    <i class="material-icons">account_circle</i>
  </a>
  <ul class="mui-dropdown__menu mui-dropdown__menu--right">
    <li>
      <form method="post" action="{S_LOGIN_ACTION}" class="loginform mui-form">
        <h3>{L_LOGIN}</h3>
        <div class="mui-textfield mui-textfield--float-label">
          <input type="text" tabindex="1" name="username">
          <label>{L_USERNAME}</label>
        </div>
        <div class="mui-textfield mui-textfield--float-label">
          <input type="password" tabindex="2" name="password" autocomplete="off">
          <label>{L_PASSWORD}</label>
          <!-- IF U_SEND_PASSWORD -->
          <a href="{U_SEND_PASSWORD}" tabindex="3">{L_FORGOT_PASS}</a>
          <!-- ENDIF -->
        </div>
        <!-- IF S_AUTOLOGIN_ENABLED -->
        <div class="mui-checkbox">
          <label>
            <input type="checkbox" name="autologin">
            {L_LOG_ME_IN}
          </label>
        </div>
        <!-- ENDIF -->
        <button type="submit" name="login" tabindex="5">{L_LOGIN}</button>
        <p>
          <a href="{U_LOGIN_LOGOUT}" tabindex="6">{L_LOGIN_LOGOUT}</a>
          <!-- IF S_REGISTER_ENABLED -->
          &bull;
          <a href="{U_REGISTER}" tabindex="7">{L_REGISTER}</a>
          <!-- ENDIF -->
        </p>
        {S_LOGIN_REDIRECT}
        {S_FORM_TOKEN_LOGIN}
      </form>
    </li>
    <!-- EVENT navbar_header_logged_out_content -->
  </ul>
  <!-- ENDIF -->
</div>