{% macro primaryTitle(title, url) %}
<div class="mdt-container-title">
  <h2 class="mdl-card__title-text">
    {% if url %}
    <a href="{{ url }}">{{ title }}</a>
    {% else %}
    {{ title }}
    {% endif %}
  </h2>
</div>
{% endmacro %}

{% macro secondaryTitle(title, url) %}
<div class="mdt-container-title">
  <h3 class="mdl-card__title-text">
    {% if url %}
    <a href="{{ url }}">{{ title }}</a>
    {% else %}
    {{ title }}
    {% endif %}
  </h3>
</div>
{% endmacro %}

{% macro primaryHeadline(title, url) %}
<h2 class="mdt-container-headline">
  {% if url %}
  <a href="{{ url }}">{{ title }}</a>
  {% else %}
  {{ title }}
  {% endif %}
</h2>
{% endmacro %}

{% macro secondaryHeadline(title, url) %}
<h3 class="mdt-container-headline">
  {% if url %}
  <a href="{{ url }}">{{ title }}</a>
  {% else %}
  {{ title }}
  {% endif %}
</h3>
{% endmacro %}

{% macro supportText(desc) %}
{% if desc %}
<div class="mdl-card__supporting-text">{{ desc }}</div>
{% endif %}
{% endmacro %}
